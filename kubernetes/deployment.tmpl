apiVersion: apps/v1
kind: Deployment
metadata:
  name: http-frontend
  labels:
    app: http-frontend
spec:
  replicas: 4
  selector:
    matchLabels:
      app: http-frontend
  template:
    metadata:
      labels:
        app: http-frontend
    spec:
      containers:
        - name: http-frontend-app
          image: zooniverse/http-frontend:__IMAGE_TAG__
          ports:
            - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: http-frontend
spec:
  selector:
    app: http-frontend
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: NodePort
